---
import { Icon } from "astro-icon/components";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";
---

<MainGridLayout title={i18n(I18nKey.notFoundTitle)}>
    <div class="flex w-full justify-center items-center min-h-[60vh]">
        <div class="card-base px-9 py-12 text-center onload-animation max-w-md w-full">
            <div class="text-[6rem] md:text-[8rem] font-bold text-[var(--primary)] leading-none select-none">
                404
            </div>
            <h1 class="text-75 text-xl font-medium mt-4">
                {i18n(I18nKey.notFoundTitle)}
            </h1>
            <p class="text-50 mt-3 mb-8">
                {i18n(I18nKey.notFoundDesc)}
            </p>
            <a href={url('/')} class="inline-block">
                <button class="btn-regular h-11 px-6 rounded-lg font-medium flex items-center gap-2 active:scale-95 transition">
                    <Icon name="material-symbols:home-outline-rounded" class="text-[1.25rem]" />
                    <span>{i18n(I18nKey.backToHome)}</span>
                </button>
            </a>
        </div>
    </div>
</MainGridLayout>
